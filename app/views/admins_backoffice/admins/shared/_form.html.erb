<h3 class="is-size-3"><%= "#{action_message} #{@admin.model_name.human}" %></h3>

<% if @admin.errors.any? %>
  <div class="message is-warning">
    <div class="message-header">
      <p>Erro!</p>
    </div>
    <div class="message-body">
    <% @admin.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
    </div>
  </div>
<% end %>


<%= form_with model: [:admins_backoffice, @admin], class:"has-icons-left", local:true  do |f| %>
  <div class="field">
      <%= f.label :email, class: "field-label" %>
      <%= f.text_field :email, class: "input" %><br>
  </div>
  <div class="field">
    <%= f.label :password, class: "field-label" %>
    <%= f.password_field :password, class: "input" %><br>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, class: "field-label" %>
    <%= f.password_field :password_confirmation, class: "input" %><br>
  </div>
  <%= f.submit t('buttons.confirm'), class: "button is-primary" %>
<% end %>
