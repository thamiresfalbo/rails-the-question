<h1 class="center">Editar</h1>
<% if @admin.errors.any? %>
  <% @admin.errors.full_messages.each do |message| %>
    <h3><%= message %></h3>
  <% end %>
<% end %>

<div class="col-4">
  <%= form_with model: [:admins_backoffice, @admin], local:true  do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-input" %><br>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-input" %><br>
    </div>
    <div class="form-group">
      <%= f.label :confirm_password, class: "form-label" %>
      <%= f.password_field :confirm_password, class: "form-input" %><br>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
