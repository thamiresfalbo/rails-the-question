<h2>Administradores</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= translate_attribute(@admins, :email) %></th>
      <th><%= link_to new_admins_backoffice_admin_path , class: "btn btn-success s-circle" do %>
          <i class="icon icon-plus"></i>
      <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
      <% @admins.each do |admin| %>
    <tr>
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td style="width: 100px">
          <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary  s-circle" do %>
            <i class="icon icon-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_admin_path(admin), method: :delete, class: "btn btn-error s-circle", data: { confirm: t('messages.confirm') } do %>
            <i class="icon icon-delete"></i>
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
<%= paginate @admins, theme: 'spectre' %>
