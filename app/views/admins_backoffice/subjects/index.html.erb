<h2>Administradores</h2>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>Assunto</th>
    <th><%= link_to new_admins_backoffice_subject_path, class: "btn btn-success s-circle" do %>
        <i class="icon icon-plus"></i>
      <% end %>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.id %></td>
      <td><%= subject.description %></td>
      <td style="width: 100px">
        <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary  s-circle" do %>
          <i class="icon icon-edit"></i>
        <% end %>
        <%= link_to admins_backoffice_subject_path(subject),
                    method: :delete, class: "btn btn-error s-circle",
                    data: { confirm: 'VocÃª tem certeza?' } do %>
          <i class="icon icon-delete"></i>
        <% end %>
      </td>
  <% end %>
  </tr>
  </tbody>
</table>
<%= paginate @subjects, theme: 'spectre' %>
