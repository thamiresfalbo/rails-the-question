<% @questions.each do |question| %>
<div class="card">
    <div class="card-header">
        <h3><%= question.description %></h3>
    </div>
    <div class="card-body">
        <ul>
        <% question.answers.each do |answer| %>
            <li><%= answer.description %></li>
        <% end %>
        </ul>
    </div>
</div>

<% end %>

<%= paginate @questions, theme: 'spectre' %>
