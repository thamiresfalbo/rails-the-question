<% @questions.each do |question| %>
<div class="message is-dark">
    <div class="message-body">
        <span class="tag is-info is-rounded"><%= question.subject.description %></span>    
        <p class="has-text-weight-bold"><%= question.description %></p>
        <ul>
        <% question.answers.each do |answer| %>
            <li><%= answer.description %></li>
        <% end %>
        </ul>
    </div>
</div>

<% end %>

<%= paginate @questions, theme: 'bulma' %>
